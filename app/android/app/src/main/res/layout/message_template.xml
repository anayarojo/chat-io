<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="4dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvText"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:paddingBottom="8dp"
                android:paddingTop="4dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvDate"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:textAlignment="textEnd"
                android:paddingEnd="0dp" android:paddingBottom="4dp"/>
    </LinearLayout>
</LinearLayout>