<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="4dp">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="72dp" app:srcCompat="@drawable/ic_user_profile_1"
            android:id="@+id/template_ivAvatar" android:padding="8dp" android:scaleType="fitXY"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/template_tvUser"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/template_tvText"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:paddingBottom="8dp"
                android:paddingTop="4dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/template_tvDate"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:textAlignment="textEnd"
                android:paddingEnd="0dp" android:paddingBottom="4dp"/>
    </LinearLayout>
</LinearLayout>