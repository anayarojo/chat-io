<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <Button
            android:text="Unirse"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_bnJoin" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_etName"
            app:layout_constraintStart_toStartOf="@+id/login_bnContinue"
            app:layout_constraintEnd_toEndOf="@+id/login_bnContinue"
            style="@style/Widget.AppCompat.Button.Colored" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/login_etName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.48"
            android:hint="Ingresa tu nombre" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_tvName"/>
    <TextView
            android:text="Nombre"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_tvName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.444"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/login_bnChangeAvatar"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp" app:srcCompat="@drawable/ic_user_profile_1"
            android:id="@+id/login_ivAvatar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="76dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/login_tvTitle"
            android:scaleType="fitXY"/>
    <TextView
            android:text="Â¿Quieres unirte al chat?"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_tvTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Continuar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_bnContinue" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/login_bnJoin"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.48" app:layout_constraintVertical_bias="0.0"
    />
    <Button
            android:text="Cambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_bnChangeAvatar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/login_ivAvatar"/>
</android.support.constraint.ConstraintLayout>